<Page x:Class="Login_WPF.NewProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="New Project">
    <StackPanel Margin="20">
        <Label Content="Project Name:"/>
        <TextBox x:Name="ProjectNameTextBox" Margin="0,5"/>
        <Label Content="Project Description:"/>
        <TextBox x:Name="ProjectDescriptionTextBox" Margin="0,5"/>
        <Button Content="Create Project" Click="CreateProject_Click" Margin="0,10"/>
    </StackPanel>
</Page>
